<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_primary"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <com.kaskys.speedreadinginformation.app.ui.widget.IWeatherView
                android:id="@+id/bar_weather"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/theme_text_primary"
            android:textSize="24sp"
            android:text="ABC"/>
        <LinearLayout
                android:id="@+id/music_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone">
                <ImageButton
                        android:id="@+id/btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_music_favorites"
                        android:background="@android:color/transparent"/>
                <com.kaskys.speedreadinginformation.app.ui.widget.IEditText
                        android:id="@+id/i_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/edit_bg"
                        android:hint="请输入关键字" />
                <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="30dp" >
                        <com.kaskys.speedreadinginformation.app.ui.widget.IView
                                android:id="@+id/i_view"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerInParent="true"
                                android:background="@color/theme_primary" />
                        <com.kaskys.speedreadinginformation.app.ui.widget.ICancelButton
                                android:id="@+id/cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:textSize="7sp"
                                android:text="取消"
                                android:visibility="gone" />
                </RelativeLayout>
        </LinearLayout>
</android.support.v7.widget.Toolbar>